{
	"server": {
		"port": 4000,
		"host": "127.0.0.1",
		"secure": false
	},
	"publicUrl": "http://localhost:3000",
	"//clientPath": "Relative to server's root or absolute",
	"clientPath": "../client",
	"es": {
		"connection": {
			"host": "localhost:9200"
		},
		"indices": {
			"user": "eatlas_user",
			"resource": "eatlas_resource",
			"topic": "eatlas_topic"
		},
		"indexSettings": {},
		"autoMigration": true,
		"acceptObsoleteMapping": false
	},
	"session": {
		"secret": "E-Atlas S3cr3T"
	},
	"redis": {
		"host": "localhost",
		"port": 6379
	},
	"cors": {
		"origins": ["$publicUrl"],
		"allowNoOrigin": false
	},
	"google": {
		"clientId": "see https://console.cloud.google.com/apis/credentials",
		"exportUrl":
			"https://www.googleapis.com/drive/v3/files/FILE_ID/export?mimeType=FORMAT",
		"downloadUrl":
			"https://www.googleapis.com/drive/v3/files/FILE_ID?alt=media",
		"exportTrigger": {
			"article": ["application/vnd.google-apps.document"]
		},
		"exportFormat": {
			"article":
				"application/vnd.openxmlformats-officedocument.wordprocessingml.document"
		}
	},
	"logger": {
		"name": "eatlas",
		"level": "info",
		"src": false
	},
	"//publishFileCommand": "'symlink' or 'copy'",
	"publishFileCommand": "copy",
	"//uploadPath": "Unpublished files are in this folder, named <id>*.<ext>",
	"uploadPath": "./data/uploads",
	"//publicPath": "Published files are in those folders",
	"publicPath": {
		"article": "$clientPath/public/article",
		"focus": "$clientPath/public/focus",
		"image": "$clientPath/public/media/images",
		"map": "$clientPath/public/media/maps",
		"sound": "$clientPath/public/media/sounds"
	},
	"htmlFileName": {
		"article": "$id.html",
		"focus": "$id.html"
	}
}
