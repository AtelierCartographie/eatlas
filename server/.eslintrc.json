{
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "prefer-arrow-callback": "error",
    "handle-callback-err": "error",
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    "semi": ["error", "never"]
  }
}
