{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "mocha --reporter xunit",
    "predev": "yarn git-version",
    "dev": "run-p dev:*",
    "dev:services": "docker start eatlas_es_dev eatlas_redis_dev || docker-compose -f ../docker-compose.dev.yml up",
    "dev:server": "cross-env NODE_CONFIG_DIR='../config' NODE_ENV=development 'DEBUG=eatlas:*,$DEBUG' nodemon server.js -w '.' -w '../client/src/components/preview/*.js' | bunyan -o short",
    "dev:test": "mocha --watch --growl --reporter list",
    "prestart": "yarn git-version",
    "start": "cross-env 'NODE_CONFIG_DIR=${NODE_CONFIG_DIR:../config}' NODE_ENV=production node server.js",
    "add-user": "cross-env 'NODE_CONFIG_DIR=${NODE_CONFIG_DIR:../config}' node bin/add-user.js | bunyan -o short",
    "es-index": "cross-env 'NODE_CONFIG_DIR=${NODE_CONFIG_DIR:../config}' node bin/es-index.js | bunyan -o short",
    "model-repl": "cross-env 'NODE_CONFIG_DIR=${NODE_CONFIG_DIR:../config}' node bin/model-repl.js",
    "rebuild-site": "cross-env 'NODE_CONFIG_DIR=${NODE_CONFIG_DIR:../config}' 'ES_AUTO_MIGRATION=0' node bin/rebuild-site.js | bunyan -o short",
    "git-version": "echo module.exports=\\\"$(cat ../.git/ORIG_HEAD | head -c 7)\\\" > ./git-version.js"
  },
  "author": "Nicolas Chambrier <naholyr@gmail.com> (http://naholyr.fr/)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "env-test": "^1.0.0",
    "eslint": "^4.12.1",
    "mocha": "^5.0.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.0"
  },
  "dependencies": {
    "@naholyr/cross-env": "^1.0.0",
    "agentkeepalive": "^3.3.0",
    "body-parser": "^1.18.2",
    "boom": "^7.1.1",
    "bunyan": "^1.8.12",
    "chalk": "^2.3.2",
    "cheerio": "^1.0.0-rc.2",
    "config": "^1.28.1",
    "connect-redis": "^3.3.2",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^5.0.0",
    "elasticsearch": "^14.0.0",
    "express": "^4.16.2",
    "express-boom": "^2.0.0",
    "express-session": "^1.15.6",
    "fs-extra": "^5.0.0",
    "googleapis": "^24.0.0",
    "joi": "^13.0.2",
    "lodash": "^4.17.5",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.0",
    "lodash.template": "^4.4.0",
    "mammoth": "https://github.com/byteclubfr/mammoth.js#color",
    "mime": "^2.2.0",
    "ora": "^2.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hyperscript": "^3.1.0",
    "request-promise-native": "^1.0.5",
    "user-home": "^2.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  }
}
